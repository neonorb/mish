// -- definition
// define
DEFLITERAL(defkeyword,
	U(ld),
	U(le),
	U(lf))
DEFLITERAL(define, U(defkeyword), U(requirewhitespace), N(type,type), U(requirewhitespace), N(variable,symbol))
// assign
DEFLITERAL(assign, N(variable,symbol), U(equals), N(expression,expression))
// define and assign
DEFLITERAL(defassign, N(define,define), U(equals), N(expression,expression))

// -- if
// elseif
DEFLITERAL(elseifkeyword,
	U(le),
	U(ll),
	U(ls),
	U(le),
	U(li),
	U(lf))
DEFLITERAL(elseif, U(elseifkeyword), N(condition,expression), N(block,block))
DEFVARIABLE(elseifs, elseif)
// else
DEFLITERAL(elsekeyword,
	U(le),
	U(ll),
	U(ls),
	U(le))
DEFLITERAL(else_, U(elsekeyword), N(block,block))
DEFOPTIONAL(elseoptional, else_)
// if
DEFLITERAL(ifkeyword,
	U(li),
	U(lf))
DEFLITERAL(if_, U(ifkeyword), N(condition,expression), N(block,block), N(elseifs,elseifs), N(else_,elseoptional))

// -- loop
DEFLITERAL(loopkeyword,
	U(ll),
	U(lo),
	U(lo),
	U(lp))
DEFLITERAL(loop, U(loopkeyword), N(parameter,expression), U(openbrace), N(block,block))

// statement
DEFSWITCH(statement, define, assign, defassign, funcall, if_, loop)